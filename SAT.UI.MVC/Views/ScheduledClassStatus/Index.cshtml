@model IEnumerable<SAT.DATA.EF.ScheduledClassStatus>

@{
    ViewBag.Title = "Index";
}
<br /><br />
<br /><br />

@if (User.IsInRole("Admin") && Request.IsAuthenticated)
{
    <div class="text-center">
        @Html.ActionLink("Create New", "Create")
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SCSName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SCSName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SCSID }) 
                @Html.ActionLink("Details", "Details", new { id = item.SCSID }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.SCSID })
            </td>
        </tr>
    }

</table>
